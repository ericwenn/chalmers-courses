{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "strictFunctionTypes":false,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext.asynciterable"
    ],
    "paths": {
      "graphql-scalar-objectid": ["src/@types/index.d.ts"]
    },
    "baseUrl": "./",
  },
  "exclude": [
    "**/node_modules"
  ]
}
