{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext.asynciterable"
    ],
    "baseUrl": "./",
    "typeRoots": [ "./node_modules/@types/", "./@types/"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/*.spec.ts",
    "**/__tests__/*.ts"
  ]
}
